<div id="buylist">
  <h1>Register account.
  </h1>
  <form action="/users/register" method="POST">
    <div class="login">
      <input type="name" id="name" name="name" placeholder="name" required="required" class="input-txt" value="{{{name}}}" />
      <input type="email" id="email" name="email" placeholder="email" required="required" class="input-txt" value="{{{email}}}" />
      <input type="password" id="password" name="password" placeholder="Password" required="required" class="input-txt"
        value="{{{password}}}" />
      <input type="password" id="password2" name="password2" placeholder="Password" required="required" class="input-txt"
        value="{{{password2}}}" />
      <div class="login-footer">
        <a href="/users/login" class="lnk">
          <span>Login</span>
        </a>
        <button type="submit" class="btn--right">Sign in </button>

      </div>
  </form>
</div>